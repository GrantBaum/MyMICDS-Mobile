{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"eqeqeq": [
			"error",
			"always"
		],
		"camelcase": [
			"warn",
			{
				"properties": "always"
			}
		],
		"guard-for-in": [
			"warn"
		],
		"no-eval": [
			"warn"
		],
		"strict": [
			"error",
			"global"
		],
		"operator-assignment": [
			"warn"
		],
		"spaced-comment": [
			"warn"
		],
		"no-var": [
			"error"
		],
		"prefer-arrow-callback": [
			"error"
		],
		"prefer-const": [
			"warn"
		]
	}
}
